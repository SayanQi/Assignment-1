<% task.errors.each do |key, value| %>
	<div class="alert alert-<%= key %> alert-dismissible fade show" role="alert">
			<strong>
					<%= value %>
			</strong>
			<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
	</div>
<% end %>
<%= form_with model: task, data: { controller: "flatpickr" } do |f| %>
	<div class="card p-3 mx-auto" style="max-width: 400px; justify-content: center;">
		<div class="mb-3">
				<%= f.label :name, class: "form-label" %>
				<%= f.text_field :name, class: "form-control" %>
		</div>
		<div class="mb-3">
				<%= f.label :description, class: "form-label" %>
				<%= f.text_area :description, class: "form-control" , required: true %>
		</div>
		<div class="form-group mb-3">
				<%= f.label 'datetime' , 'Choose a Date and Time' %>
				<%= f.datetime_field :pending_date, class: 'form-control pending-date' %>
		</div>
		<%= errors_for(task, :name) %>
		<div class="mb-3 form-check">
				<%= f.check_box :completed, class: "form-check-input" %>
				<%= label_tag :completed, "Mark as Completed" , class: "form-check-label", for: "exampleCheck1" , required: true %>
		</div>
		<div class="mb-3">
				<%= f.button class: "btn btn-success" %>
				<%= link_to "Cancel" , root_path, class: "btn btn-secondary" %>
		</div>
	</div>
<% end %>