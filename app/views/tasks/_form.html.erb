<%= form_with model: task do |f| %>
    <div class="card p-3 mx-auto" style="max-width: 400px; justify-content: center;">
        <div class="mb-3">
            <%= f.label :name, class: "form-label" %>
            <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="mb-3">
            <%= f.label :description, class: "form-label" %>
            <%= f.text_area :description, class: "form-control" %>
        </div>
        <div class="form-group mb-3">
            <%= f.label 'datetime', 'Choose a Date and Time' %>
            <!-- <%= datetime_field_tag :pending_date, class: 'form-control', pattern: "YYYY-MM-DDThh:mm" %> -->
            <%= f.text_field :pending_date, class: "form-control" %>
        </div>
        <div class="mb-3 form-check">
            <%= f.check_box :completed, class: "form-check-input" %>
            <%= label_tag :completed, "Mark as Completed", class: "form-check-label", for: "exampleCheck1" %>
        </div>
        <div class="mb-3">
            <%= f.button class: "btn btn-success" %>
            <%= link_to "Cancel", root_path, class: "btn btn-secondary" %>
        </div>
    </div> 
<% end %>